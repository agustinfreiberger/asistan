<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tourwithme_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/colorGray">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/text_twm_layout"
        android:layout_width="404dp"
        android:layout_height="630dp"
        app:layout_constraintBottom_toBottomOf="@+id/myFrameLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/twmText"
            android:layout_width="340dp"
            android:layout_height="151dp"
            android:layout_marginBottom="264dp"
            android:text="@string/mensajePrincipalTWM"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/twmTitle"
            app:layout_constraintVertical_bias="0.791" />

        <TextView
            android:id="@+id/twmTitle"
            android:layout_width="229dp"
            android:layout_height="67dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="@string/tituloTWM"
            android:textAlignment="center"
            android:textColor="#0B0A0A"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.147" />

        <ImageView
            android:id="@+id/twmIcon"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:contentDescription="@string/todo"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.509"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/twmText"
            app:layout_constraintVertical_bias="0.437"
            app:srcCompat="@drawable/twm_icon"></ImageView>
<!--            app:src="@drawable/twm_icon"-->
<!--            tools:srcCompat="@drawable/twm_icon" /-->

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="167dp"
        android:layout_height="136dp"
        app:layout_constraintBottom_toBottomOf="@+id/myFrameLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_showProfile"
        android:layout_width="128dp"
        android:layout_height="61dp"
        android:contentDescription="@string/show_profile"
        android:drawableEnd="@drawable/person"
        android:text="@string/show_profile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_showTour"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myFrameLayout"
        app:layout_constraintVertical_bias="0.626" />


    <Button
        android:id="@+id/btn_showTour"
        android:layout_width="121dp"
        android:layout_height="59dp"
        android:drawableEnd="@drawable/next"
        android:text="@string/show_tour"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myFrameLayout"
        app:layout_constraintVertical_bias="0.6" />

    <Button
        android:id="@+id/btn_showGroup"
        android:layout_width="125dp"
        android:layout_height="60dp"
        android:drawableEnd="@drawable/group"
        android:text="@string/show_groups"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.833"
        app:layout_constraintStart_toEndOf="@+id/btn_showTour"
        app:layout_constraintTop_toBottomOf="@+id/myFrameLayout"
        app:layout_constraintVertical_bias="0.555" />

    <FrameLayout
        android:id="@+id/myFrameLayout"
        android:layout_width="408dp"
        android:layout_height="632dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>